@model List<Phone>
@{
    ViewBag.Title = "My Contacts";
}

<h2>Contacts List</h2>

<a asp-controller="Phone" asp-action="Add">Add New Contact</a>
<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Name</th>
            <th>Number</th>
            <th>Type</th>
            <th>Notes</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var phone in Model)
        {
        <tr>
            <td>@phone.Name</td>
            <td>@phone.Number</td>
            <td>@phone.Contact.Name</td>
            <td>@phone.Notes</td>
            <td>
                <a asp-controller="Phone" asp-action="Edit" asp-route-id="@phone.PhoneId" asp-route-slug="@phone.Slug">Edit</a>
                <a asp-controller="Phone" asp-action="Delete" asp-route-id="@phone.PhoneId" asp-route-slug="@phone.Slug">Delete</a>
            </td>
        </tr>
        }
    </tbody>
</table>